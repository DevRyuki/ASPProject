<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/Content/bootstrap.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Tasky</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @ViewBag.nav
                @if(HttpContext.Current.Session["Username"] != null) {

                    <li class='nav-item'>
                        <a class='nav-link' href='@Url.Action("Signout", "Home")'>Signout</a>
                    </li>
                }
                @if (ViewBag.Title != "Admin" && HttpContext.Current.Session["Username"] != null && HttpContext.Current.Session["Username"].ToString() == "admin")
                {
                
                    <li class='nav-item'>
                        <a class='nav-link' href='@Url.Action("Index", "Users")'>Admin</a>
                    </li>
                }
                else if (ViewBag.Title == "Admin" && HttpContext.Current.Session["Username"] != null && HttpContext.Current.Session["Username"].ToString() == "admin")
                {

                    <li class='nav-item active'>
                        <a class='nav-link' href='@Url.Action("Index", "Users")'>Admin <span class='sr-only'>(current)</span></a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="body-content">
        <h1 class="titleh">@ViewBag.Title</h1>
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
